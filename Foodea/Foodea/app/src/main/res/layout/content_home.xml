<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/ib_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_phone"
            android:onClick="onClick"
            android:layout_marginRight="15dp"
            android:contentDescription="Food"/>

        <TextView
            android:id="@+id/tv_food"
            android:labelFor="@id/ib_food"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib_food"
            android:layout_marginRight="15dp"
            android:text="Comidas"/>

        <ImageButton
            android:id="@+id/ib_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ib_food"
            android:layout_toRightOf="@+id/ib_food"
            android:src="@drawable/ic_action_view_as_list"
            android:onClick="onClick"
            android:layout_marginLeft="15dp"
            android:contentDescription="Drinks"/>

        <TextView
            android:id="@+id/tv_drink"
            android:labelFor="@id/ib_drink"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib_drink"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_food"
            android:layout_toEndOf="@+id/tv_food"
            android:layout_marginLeft="15dp"
            android:text="Bebidas"/>

        <ImageButton
            android:id="@+id/ib_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food"
            android:src="@drawable/ic_action_web_site"
            android:onClick="onClick"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="Places"/>

        <TextView
            android:id="@+id/tv_places"
            android:labelFor="@id/ib_place"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib_place"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="Lugares"/>

        <ImageButton
            android:id="@+id/ib_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ib_place"
            android:layout_toRightOf="@+id/ib_place"
            android:layout_below="@id/tv_drink"
            android:src="@drawable/ic_action_settings"
            android:onClick="onClick"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:contentDescription="Settings"/>

        <TextView
            android:id="@+id/tv_settings"
            android:labelFor="@id/ib_settings"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_places"
            android:layout_toEndOf="@+id/tv_places"
            android:layout_below="@+id/ib_settings"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="Settings"/>

    </RelativeLayout>

</RelativeLayout>
